<div class="mx-auto px-4 py-12 sm:px-6 md:max-w-3xl lg:max-w-4xl w-full">	
<head >
<p class="text-gray-200 italic">{{ page.date.toISOString().slice(0,10)  }} </p>
<h1 class="text-white text-4xl font-bold mb-2">{{ title }}</h1>
</head>
<main class="bg-gray-300 markdown p-4">

    <p>

     <a href="/index.html" class="text-blue-600 underline pl-1">‚Üê Back to Home</a>
     </p> 
	<article>
	{{ content | safe }}
    </article>
</main>

<!-- {% renderFile "./src/_includes/footer.njk" %} -->
<footer class="bg-gray-100 text-gray-800 p-4 markdown">
		<h3> Index</h3>
	
    <ol class="list-decimal list-inside space-y-1">
      <li><a href="/index.html" class="text-blue-600 underline pl-1">Home</a></li>
      {% for post in collections.posts %}
      <li>
        <a href="{{ post.url }}" class="text-blue-600 underline">{{ post.data.title }}</a>
      </li>
      {% endfor %}
    </ol>
  </footer>
</div>
